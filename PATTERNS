using namespace std;

int main() {
    int n = 5;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= i; j++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = n; i >= 1; i--) {
        for(int j = 1; j <= i; j++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= i; j++) {
            cout << j << " ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4;
    for(int i = 1; i <= n; i++) {
        for(int space = 1; space <= n - i; space++) {
            cout << " ";
        }
        for(int star = 1; star <= i; star++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= n; j++) {
            if(i == 1 || i == n || j == 1 || j == n)
                cout << "* ";
            else
                cout << "  ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4, num = 1;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= i; j++) {
            cout << num << " ";
            num++;
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4;
    for(int i = 1; i <= n; i++) {
        for(int space = 1; space <= n - i; space++)
            cout << " ";
        for(int star = 1; star <= i; star++)
            cout << "* ";
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4;
    for(int i = 1; i <= n; i++) {
        for(int space = 1; space < i; space++)
            cout << " ";
        for(int star = 1; star <= n - i + 1; star++)
            cout << "* ";
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4;

    // Upper half
    for(int i = 1; i <= n; i++) {
        for(int space = 1; space <= n - i; space++)
            cout << " ";
        for(int star = 1; star <= i; star++)
            cout << "* ";
        cout << endl;
    }

    // Lower half
    for(int i = n - 1; i >= 1; i--) {
        for(int space = 1; space <= n - i; space++)
            cout << " ";
        for(int star = 1; star <= i; star++)
            cout << "* ";
        cout << endl;
    }

    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = 1; i <= n; i++) {
        for(int s = 1; s <= n - i; s++)
            cout << " ";
        for(int j = 1; j <= i; j++)
            cout << i << " ";
        cout << endl;
    }
}

