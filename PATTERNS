#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= i; j++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = n; i >= 1; i--) {
        for(int j = 1; j <= i; j++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= i; j++) {
            cout << j << " ";
        }
        cout << endl;
    }
    return 0;
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 4;
    for(int i = 1; i <= n; i++) {
        for(int space = 1; space <= n - i; space++) {
            cout << " ";
        }
        for(int star = 1; star <= i; star++) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}

