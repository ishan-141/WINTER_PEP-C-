#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = 1; i <= n; i++) {
        for(int s = 1; s < i; s++)
            cout << " ";
        for(int j = 1; j <= n - i + 1; j++)
            cout << i << " ";
        cout << endl;
    }
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= i; j++) {
            if((i + j) % 2 == 0)
                cout << "1 ";
            else
                cout << "0 ";
        }
        cout << endl;
    }
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 9;
    for(int i = 1; i <= n; i++) {
        for(int j = 1; j <= n; j++) {
            if(j == i || j == n - i + 1)
                cout << "*";
            else
                cout << " ";
        }
        cout << endl;
    }
}

-----------------------------------------------------------------------------------------------------------------------------------
#include <iostream>
using namespace std;

int main() {
    int n = 5;
    for(int i = 1; i <= n; i++) {
        for(int s = 1; s <= n - i; s++)
            cout << " ";
        for(int j = 1; j <= 2*i - 1; j++) {
            if(j == 1 || j == 2*i - 1 || i == n)
                cout << "*";
            else
                cout << " ";
        }
        cout << endl;
    }
}

